
{{>navbar}}
{{!-- new survey form --}}
<div class="container">
	<div class="row justify-content-center">
		<div class ="col-5">
			<div class="card" style="margin-top:10px;">
			<div class="card-body">
				<h5 class="card-title">Resultados de la Encuesta</h5>
				<div class="mb-3">
					<label class="form-label">{{resultsPoll.name}}</label>
					<p><strong>Creado por: </strong>{{resultsPoll.email}}</p>
					
					{{!-- facebook --}}
					<div class="fb-share-button" data-href="http://localhost:3000/polls/6054c9d032f53bc45b0c91ec/results" data-layout="button_count" data-size="small">
					<a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">
					Compartir</a></div>

					{{!-- twitter --}}
					<a class="twitter-share-button"
					href="https://twitter.com/intent/tweet?text=Comparto%20esta%20encuesta"
					data-url="http://localhost:3000/polls/{{resultsPoll._id}}"
					data-size="small">
					Tweet</a>
					<!-- Button trigger modal -->
						<button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal">
						<i class="fas fa-share-alt"></i> Compartir Encuesta
						</button>

					<!-- Modal -->
					<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
					<div class="modal-dialog">
						<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="exampleModalLabel">Compartir Encuesta</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">
							http://localhost:3000/polls/{{resultsPoll._id}}
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
							<button type="button" class="btn btn-primary">Save changes</button>
						</div>
						</div>
					</div>
					</div>

				</div>
				<div class="mb-3">
					<label class="form-label">{{resultsPoll.description}}*</label>
				</div>
				<form action="/newPoll" method="POST"></form>
				<div class="mb-3">
					<label class="form-label"><strong>Results:</strong></label>
				</div>
				
				<label>{{resultsPoll.optionOne.value}} %{{toFixed percenOptionOne }}</label>
				<div class="progress">
					<div class="progress-bar" role="progressbar" style="width: {{toFixed percenOptionOne}}%;" aria-valuenow="{{toFixed percenOptionOne}}%" 
					aria-valuemin="0" aria-valuemax="100">{{resultsPoll.optionOne.votes}}</div>
				</div>
				<label>{{resultsPoll.optionTwo.value}} %{{toFixed percenOptionTwo }}</label>
				<div class="progress">
					<div class="progress-bar" role="progressbar" style="width: {{toFixed percenOptionTwo}}%;" aria-valuenow="50" 
					aria-valuemin="0" aria-valuemax="100">{{resultsPoll.optionTwo.votes}}</div>
				</div>
					<div class="mb-3 " style="margin-top: 20px;">
						<Label>Votos Totales: {{resultsPoll.totalVotes}}</Label>				
					</div>	
					<div class="mb-3 " style="margin-top: 20px;">
						<a href="/"><button class="btn btn-primary" type="submit" href="/">Return Home</button></a>				
					</div>				
				</div>
				
				</form>
			</div>
			</div>

		</div>
	</div>
</div>
